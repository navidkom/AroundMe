<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/view_default_padding"
    android:layout_marginLeft="@dimen/view_default_padding_x2"
    android:layout_marginRight="@dimen/view_default_padding_x2"
    android:layout_marginTop="@dimen/view_default_padding"
    android:background="@drawable/venue_recycler_selector_back"
    android:clickable="true"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/venue_recycler_item_category_image_view"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:padding="@dimen/view_default_padding_x3"
        android:tint="@color/colorWhite" />

    <TextView
        android:id="@+id/venue_recycler_item_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/view_default_padding"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:gravity="center"
        android:minWidth="64dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/view_default_padding"
        android:paddingEnd="@dimen/view_default_padding_x2"
        android:paddingLeft="@dimen/view_default_padding_x2"
        android:paddingRight="@dimen/view_default_padding_x2"
        android:paddingStart="@dimen/view_default_padding_x2"
        android:paddingTop="@dimen/view_default_padding">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/distance"
            android:tint="@color/colorVeryLightBlue" />

        <TextView
            android:id="@+id/venue_recycler_item_distance_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorVeryLightBlue" />
    </LinearLayout>

</LinearLayout>
